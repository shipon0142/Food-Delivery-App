<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shipon.khaidai.AdderssActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout


                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                                android:drawableTint="#000000"
                                android:paddingLeft="10dp"
                                android:text="Add Address"
                                android:textColor="#000000"
                                android:textSize="22sp" />

                            <LinearLayout
                                android:id="@+id/nam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addr"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="Name:"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/customername"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/addr"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/tphone"
                                    android:drawableTint="@color/colorPrimary"
                                    android:paddingLeft="10dp"
                                    android:textColor="#4d4949"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/aap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/nam"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tphone"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="Phone:"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/phoneNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/addr"
                                    android:layout_toRightOf="@+id/tphone"
                                    android:paddingLeft="10dp"
                                    android:text=""
                                    android:textColor="#4d4949"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sssss"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/aap"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tcity"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="City:"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_toRightOf="@+id/tcity"
                                    android:paddingLeft="10dp"
                                    android:text="Dhaka"
                                    android:textColor="#4d4949"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/aaar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/sssss"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tarea"

                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:gravity="right"
                                    android:paddingLeft="10dp"
                                    android:text="Area:"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/tarea"
                                    android:paddingLeft="10dp"

                                    android:text="Dhanmondi"
                                    android:textColor="#4d4949"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/aaaaa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/aaar"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tlocation"
                                    android:layout_width="85dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@id/tarea"
                                    android:layout_marginTop="12dp"
                                    android:gravity="right"
                                    android:text="Address:"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/customeraddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@+id/tarea"
                                    android:layout_marginLeft="10dp"
                                    android:background="@drawable/edit_text_style"
                                    android:hint="Location"
                                    android:paddingLeft="10dp"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/submitConfirm"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/aaaaa"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/order_button_style"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
