<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#B71B09" />

            <corners
                android:radius="10dp" />
            />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#571109"
                android:endColor="#571109"
                android:angle="270" />

            <corners
                android:radius="10dp" />
            />
        </shape>
    </item>
</selector>